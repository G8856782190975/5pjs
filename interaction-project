<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>

<head>
    <title>p5js Template</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/0.5.3/p5.js"></script>
    
    <script>
    var centerX
    var centerY
    var scale
    var opacity
    var strokeWeight
        function setup() {
            createCanvas(800,800);
            scale = 1.3
            centerX = 350
            opacity = 255
            
        }

        function draw() {  
            
        
            
            
            
        }
        function mouseMoved() {//red and black circles
       
            strokeWeight(6)
            
            fill(40,40,40,opacity)
            ellipse(mouseX , mouseY ,50 * scale,50 *scale)
            fill(255,0,0)
            ellipse(mouseX - 50 ,mouseY -  50 ,70 * scale,70 * scale)
            fill(48,40,39,opacity)
            ellipse(mouseX - 100,mouseY - 100 ,70 * scale,70 * scale)
            scale+=.01
            opacity+=2
            
        }
            function mouseDragged() {//green and white circles
           
                fill(255,opacity)
            ellipse(mouseX, mouseY,50 *scale,50 * scale)
            fill(45,69,34)
            ellipse(mouseX - 50,mouseY -  50,70 * scale,70 * scale)
            fill(255,opacity)
            ellipse(mouseX - 100,mouseY - 100,70 * scale,70 * scale)
            scale-=.01
            opacity-=2
            
            
            }
    </script>
</head>

<body>

</body>

</html>


